                <div class="col-xs-12 col-md-4 footer-col-3">
                    <h3>Powered By</h3>
                    <hr>
                    <img src="/img/Braintree_Logo-01.svg" alt="">
                    <img src="" alt="">
                    <img src="/img/Send%20Grid%20Logo2-01.svg" alt="">
                </div>
            </footer>
        </div><!-- /container -->


